FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y \
    curl bash git gosu ca-certificates gnupg \
    && install -m 0755 -d /etc/apt/keyrings \
    && curl -fsSL https://download.docker.com/linux/debian/gpg | gpg --dearmor -o /etc/apt/keyrings/docker.gpg \
    && echo "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/debian bookworm stable" > /etc/apt/sources.list.d/docker.list \
    && apt-get update && apt-get install -y docker-ce-cli \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user for Claude
RUN useradd -m -s /bin/bash claude

# Install Claude Code as the claude user
USER claude
RUN mkdir -p /home/claude/bin
RUN curl -fsSL https://claude.ai/install.sh | bash
ENV PATH="/home/claude/bin:/home/claude/.local/bin:${PATH}"

# Pre-configure Claude Code: skip onboarding and accept bypass permissions
RUN mkdir -p /home/claude/.claude && \
    echo '{"hasCompletedOnboarding":true,"theme":"dark","bypassPermissionsModeAccepted":true}' > /home/claude/.claude/.config.json

# Entrypoint that fixes docker socket permissions and injects credentials
USER root
COPY entrypoint.sh /usr/local/bin/entrypoint.sh
RUN chmod +x /usr/local/bin/entrypoint.sh

WORKDIR /workspace
ENTRYPOINT ["/usr/local/bin/entrypoint.sh"]
CMD ["sleep", "infinity"]
